    @model TBIBankApp.Models.Emails.EmailListModel


@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" type="text/css" href="~/css/customTable.css" />


<table id="example" class="display1" style="width:100%">
    <thead>
        <tr>
            <th>Email ID</th>
            <th>Recieved</th>
            <th>Sender</th>
            <th>Subject</th>
            <th>Open since</th>
            <th>Body</th>
            <th>Status</th>
            <th>UpdatedBy</th>
            <th>Change status</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.EmailViewModels)
        {
            <tr>
                <th style="width:10%">@item.Id</th>
                <td>@item.RegisteredInDataBase</td>
                <td>@item.Sender</td>
                <td>@item.Subject</td>
                <td>
                    @if (item.AttachmentCount == 0)
                    {
                        <p>No Attachments</p>
                    }
                    else
                    {
                        <p>
                            @item.AttachmentCount Attachments <span class="glyphicon glyphicon-tags"></span>
                        </p>
                    }
                </td>
                <td>@item.Status</td>
                <td>

                    <button type="button" class="btn btn-primary" id="@item.Id" data-toggle="modal" data-target="#exampleModal" onclick="ModalTest(this.id)">
                        Body Preview
                    </button>

                    <!-- Modal -->
                    <div class="modal fade @item.Id" id="@item.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>
                                        @item.Body
                                    </p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary buttonsTest2" data-dismiss="modal" style="background-color:red">Set to Clsed</button>
                                    @if (User.IsInRole("Manager"))
                                    {
                                        <button type="button" class="btn btn-primary buttonsTest2" data-dismiss="modal" style="background-color:green">Set to New</button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    <tfoot>
        <tr>
            <th>Email ID</th>
            <th>Recieved</th>
            <th>Sender</th>
            <th>Subject</th>
            <th>Body</th>
            <th>Attachments</th>
            <th>Status</th>
            <th>Updated By</th>
            <th>Changed Status</th>
        </tr>
    </tfoot>
</table>
@section Scripts
{

    <script type="text/javascript" src="~/js/customTable.js"></script>
    <script type="text/javascript" src="~/js/modalButtons.js"></script>
}