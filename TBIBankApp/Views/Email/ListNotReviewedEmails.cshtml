@model TBIBankApp.Models.Emails.EmailListModel

<link rel="stylesheet" type="text/css" href="~/css/customTable.css" />


<table id="example" class="display1" style="width:100%">
    <thead>
        <tr>
            <th>Email ID</th>
            <th>Recieved</th>
            <th>Sender</th>
            <th>Subject</th>
            <th>Body</th>
            <th>Attachments</th>
            <th>Status</th>
            @*<th>Change status</th>*@
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.EmailViewModels)
        {
            <tr>
                <th style="width:10%">@item.Id</th>
                <td>@item.RegisteredInDataBase</td>
                <td>@item.Sender</td>
                <td>@item.Subject</td>
                <td>
                    @if (item.AttachmentCount == 0)
                    {
                        <p>No Attachments</p>
                    }
                    else
                    {
                        <p>
                            @item.AttachmentCount Attachments <span class="glyphicon glyphicon-tags"></span>
                        </p>
                    }
                </td>
                <td>@item.Status</td>
                <td>

                    <button type="button" class="btn btn-primary" id="@item.Id" data-toggle="modal" data-target="exampleModal" onclick="ModalTest(this.id)">
                        Email Preview
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="@item.Id"  tabindex="-1" role="dialog" aria-labelledby="ExampleModalTest.Id" aria-hidden="true">
                       
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="ExampleModalTest">Modal title</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>
                                        @item.Id
                                    </p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
                @*<td>
                        <div class="nav-item">
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Change Status
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">

                                    <a class="nav-link text-dark" asp-controller="Email" asp-action="ChangeStatus" asp-route-id="@item.Id" asp-route-status="InvalidApplication">Invalid application</a>

                                    <a class="nav-link text-dark" asp-controller="Email" asp-action="ChangeStatus" asp-route-id="@item.Id" asp-route-status="New">New application</a>


                                </div>
                            </div>
                        </div>
                    </td>*@
            </tr>
        }
    <tfoot>
        <tr>
            <th>Email ID</th>
            <th>Recieved</th>
            <th>Sender</th>
            <th>Subject</th>
            <th>Body</th>
            <th>Attachments</th>
            <th>Status</th>
            @*<th>Change status</th>*@
        </tr>
    </tfoot>
</table>
@section Scripts
{

    <script type="text/javascript" src="~/js/customTable.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });


        function ModalTest(id) {
            console.log(id);
            $(`#${id}`).modal().show();
        }
    </script>
}